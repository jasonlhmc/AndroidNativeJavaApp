<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/simple_view_corner_radius"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/view_underline">
        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:background="@drawable/common_table_border"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.6"
                android:id="@+id/forecastDate"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_underline"
                android:textColor="@color/white"
                android:padding="2dp"/>
            <TextView
                android:layout_weight="0.4"
                android:id="@+id/forecastTemp"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/forecastWeather"
            android:textSize="12sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/view_underline"
            android:textColor="@color/white"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/forecastWind"
            android:textSize="12sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/view_underline"
            android:textColor="@color/white"
            android:padding="2dp" />
    </LinearLayout>

</LinearLayout>