<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolsLayout"
    android:weightSum="1"
    app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/moreActionNotesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="@drawable/ic_baseline_more_horiz_24" />

        <Button
            android:id="@+id/submitNotesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_save_submit"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#CC000000"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:drawableRight="@drawable/ic_baseline_cloud_upload_24"
            android:textStyle="bold"
            android:layout_weight="0.76"/>

        <Button
            android:id="@+id/switchNotesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_swap_horiz_24"
            android:layout_weight="0.12"/>

</LinearLayout>