<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#CC000000"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/simple_view_corner_radius">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Safe Browsing API Setting"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Would you like to set the Google Safe Browsing API now?"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="It is suggested that enable safe browsing for prevent scanning unknown QR Code generated by an url listed as threat on google server."
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="NO: Ignore and continue \nYES: Set already or Setup the API now"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="14dp"/>

            <CheckBox
                android:id="@+id/doNotShowAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/darker_gray"
                android:text="Don't show again" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qrPromptCancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_negative"
                    android:textColor="@color/white"
                    android:background="@drawable/simple_button_click_effect"
                    android:layout_gravity="end" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qrPromptConfirmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_positive"
                    android:textColor="@color/white"
                    android:background="@drawable/simple_button_click_effect"
                    android:layout_gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>